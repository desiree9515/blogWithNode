{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1 class="titulo">Registre-se abaixo </h1>
<br/>
<div class="registro card">
    <div class="card-body">
        <form action="" method="POST">
            <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome" required>
            <br/>
            <input type="text" id="email" name="email" class="form-control" placeholder="E-mail" required>
            <br/>
            <input type="password" id="senha" name="senha" placeholder="Senha" class="form-control" required>    
            <br/>
            <input type="password" id="confirme" name="confirme" placeholder="Confirme a senha" class="form-control" required>
            <br/>
            <button type="submit" class="btn btn-block btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>