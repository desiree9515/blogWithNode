<div id="perfil">
  <img id="perfil_img" src="https://i.ibb.co/bQ248tH/perfil.png" alt="Me">
</div>

<div class="container">
  <div class="titulo display-4">
    Bem-Vindo(a) ao Chá com Código!
  </div>
  
  <p class="subtitulo">Blog em construção ...</p>
  
  {{#each postagens}}
      <div class="card mt-4">
          <div class="card-body">
              <a href="#" class="categoria badge badge-info">{{categoria.nome}}</a>
              <h4>{{titulo}}</h4>
              <hr>
              <p class="text-secondary">{{descricao}}</p>
              <a href="/postagens/{{slug}}">
                  <button type="button" class="btn btn-outline-info btn-sm">Leia mais <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
              </a>
          </div>
          <div class="data card-footer text-muted">
              <small><b>Publicado em: </b>{{data}}</small>
          </div>
      </div>
  {{else}}
      <h4 class="mt-3">Nenhuma postagem encontrada</h4>
  {{/each}}
</div>
<br/><br/><br/>