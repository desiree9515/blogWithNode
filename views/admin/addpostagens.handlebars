{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Criar Nova Postagem: </h3>
<hr>
<form action="/admin/postagens/nova" method="POST">
    <labe for="nome">Título: </labe>
        <input class="form-control" type="text" id="titulo" name="titulo" placeholder="Título da postagem">
    <label for="slug">Slug da postagem: </label>
        <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug da postagem">
    <label for="descricao">Descrição da postagem: </label>
        <input class="form-control" type="text" id="descricao" name="descricao" placeholder="Descrição da postagem">
    <label for="conteudo">Conteúdo da postagem: </label>
        <textarea class="form-control" id="conteudo" name="conteudo"></textarea>    
    <label for="categoria">Categoria: </label>
        <select class="custom-select" name="categoria">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="">Nenhuma categoria registrada</option>
            {{/each}}
        </select>
        <br>
    <button class="btn btn-success mt-4">Criar Postagem</button>
</form>